<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="@dimen/padding100dp"
        android:layout_height="@dimen/padding100dp"
        android:layout_marginLeft="@dimen/padding_10dp"
        android:layout_marginRight="@dimen/padding_10dp"
        >

        <RelativeLayout
            android:layout_width="@dimen/padding100dp"
            android:layout_height="@dimen/padding100dp"
            android:background="@color/recycler_bg_color">


            <ImageView
                android:id="@+id/gridImage"
                android:layout_width="@dimen/padding90dp"
                android:layout_height="@dimen/padding90dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="@dimen/padding_20dp"
                android:layout_height="@dimen/padding_20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin_3dp"
                android:src="@mipmap/cancel"
                android:visibility="visible">

            </ImageView>

        </RelativeLayout>

        <TextView
            android:id="@+id/video_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/video_icon"
            android:visibility="gone" />
    </RelativeLayout>
</layout>