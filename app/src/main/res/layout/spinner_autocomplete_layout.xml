<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding5dp">


        <com.app.securemessaging.util.CircularImageView
            android:id="@+id/userimage"
            android:layout_width="@dimen/padding50dp"
            android:layout_height="@dimen/padding50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_shapr"
            android:src="@drawable/common_image" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/userimage">

            <com.app.securemessaging.util.RobotoItalic xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:lines="1"
                android:padding="@dimen/padding5dp"
                android:text="test"
                android:textColor="@color/all_text_color"
                android:textSize="16sp" />

            <com.app.securemessaging.util.RobotoItalic xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/userReceiverAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_gravity="center"
                android:gravity="left"
                android:lines="1"
                android:padding="@dimen/padding5dp"
                android:text="test"
                android:textColor="@color/all_text_color"
                android:textSize="16sp" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1dp"
        android:background="@color/bg_color" />
</LinearLayout>